# Frontend Environment Variables for SFL Prompt Studio
# Copy this file to .env.local and fill in the values.

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Provider Configuration
# Default provider for new users (optional)
VITE_DEFAULT_PROVIDER=google

# Ollama Configuration (client-side defaults)
VITE_OLLAMA_DEFAULT_URL=http://localhost:11434
VITE_OLLAMA_CONNECTION_TIMEOUT=10000

# Session Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_SESSION_CACHE_KEY=ai-settings-cache
VITE_SESSION_CACHE_EXPIRY=1800000

# UI Configuration
VITE_MAX_PROMPT_LENGTH=10000
VITE_DEFAULT_MAX_TOKENS=1000
VITE_TOKEN_COUNT_DEBOUNCE=500

# Feature Flags
VITE_ENABLE_OLLAMA=true
VITE_ENABLE_OPENROUTER=true
VITE_ENABLE_GROQ=true
VITE_ENABLE_COHERE=false
VITE_ENABLE_MISTRAL=false
VITE_ENABLE_TOKEN_ESTIMATION=true
VITE_ENABLE_SESSION_CACHE=true

# Development Configuration
VITE_DEV_MODE=false
VITE_LOG_LEVEL=info
