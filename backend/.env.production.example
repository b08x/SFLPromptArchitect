# Production Environment Configuration
# Copy this file to .env for production deployment

# === Vault Configuration (Required for Production) ===
VAULT_ADDR=http://vault:8200
VAULT_ROLE_ID=your-role-id-from-vault-init
VAULT_SECRET_ID=your-secret-id-from-vault-init
VAULT_MOUNT_PATH=secret
VAULT_TIMEOUT=5000
VAULT_TLS_VERIFY=true

# === Basic Application Configuration ===
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://your-domain.com

# === Database Configuration ===
# These will be retrieved from Vault in production
# Keep for initial container startup only
DATABASE_URL=postgres://user:password@db:5432/sfl_db
REDIS_URL=redis://cache:6379

# === AI Provider Defaults ===
# API keys will be retrieved from Vault using modern unified AI SDK
# All providers use standardized @ai-sdk integration
DEFAULT_AI_PROVIDER=google
FALLBACK_AI_PROVIDER=openai
OPENAI_DEFAULT_MODEL=gpt-4
GOOGLE_DEFAULT_MODEL=gemini-2.0-flash-exp
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
ENABLE_GROUNDING=true

# === Security Configuration ===
BCRYPT_SALT_ROUNDS=12
JWT_EXPIRES_IN=24h

# === Logging Configuration ===
LOG_LEVEL=info

# === Optional: Backup Configuration ===
# BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30